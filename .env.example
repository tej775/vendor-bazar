# Database Configuration
# For local MongoDB
MONGODB_URI=mongodb://localhost:27017/vendorbridge

# For MongoDB Atlas (cloud database)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vendorbridge?retryWrites=true&w=majority

# JWT Secret Key - IMPORTANT: Change this to a secure random string in production
# You can generate a secure key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration - Update this to match your frontend URL
FRONTEND_URL=http://localhost:5500

# Optional: Add more environment-specific configurations below
# DATABASE_NAME=vendorbridge
# LOG_LEVEL=info
